<h2>All Books</h2>
<%=link_to "New Book", new_admin_book_path%>

<%=form_with(url: admin_books_path, method: :get, local: true) do |form|%>
    <%=form.text_field :search_text, value: @search_text, placeholder: "Search for Books"%>
    <%=form.submit "Search"%>
<%end%>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Available Quantity</th>
            <th>Total Quantity</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book|%>
            <tr>
                <td><%=link_to book.name, admin_book_path(book.id)%></td>
                <td><%=book.price%></td>
                <td><%=book.available_quantity%></td>
                <td><%=book.total_quantity%></td>
                <td><%=book.author.name%></td>
            </tr>
        <%end%>
    </tbody>
</table>