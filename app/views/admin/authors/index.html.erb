<h1>Authors</h1>
<%=link_to "New Author",new_admin_author_path%>
</br>
<table>
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        <% @authors.each do |author|%>
            <tr>
                <td><%=link_to author.name, admin_author_path(author.id)%></td>
            </tr>
        <%end%>
    </tbody>
</table>